<div class="col-md-8 col-md-push-2">

  <div class="thumbnail">
    <%= image_tag(@sock.sock_images.first.picture, class: "img-responsive") %>
    <div class="caption-full">
      <h4 class="pull-right"><%= number_to_currency(@sock.price, precision: 0) %></h4>
      <h4><a href="#"><%= @sock.name %></a>
      </h4>
      <%= content_tag(:h5, "Description:") if @sock.description %>
      <%= simple_format(@sock.description) %>
      <%= content_tag(:h5, "Style:") if @sock.style %>
      <%= simple_format(@sock.style) %>
      <%= content_tag(:h5, "Color:") if @sock.color %>
      <%= simple_format(@sock.color) %>
      <%= content_tag(:h5, "Materials:") if @sock.material %>
      <%= simple_format(@sock.material) %>
    </div>
    <div class="dropdowns">
      <%= simple_form_for @order_item, :url => order_items_path do |f| %>
        <%= f.input :sock_size_id, collection: @sock_sizes, include_blank: false, label_method: lambda { |ss| ss.size.size } %>
        <%= f.button :submit, "Add to cart", class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

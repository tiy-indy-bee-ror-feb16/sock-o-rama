<% if @order_items.size == 0 %>
  <p class="text-center">
    There are no items in your shopping cart.  Please <%= link_to "go back", root_path %> and add some items to your cart.
  </p>
<% else %>
  <% @order_items.each do |order_item| %>
    <%= render 'carts/cart_row', product: order_item.sock_size, order_item: order_item %>
  <% end %>
  <div id="order-totals">
    <%= link_to root_path, class: "btn btn-primary", id: "continue-shopping" do %>
      <i class="glyphicon glyphicon-shopping-cart"></i> Continue Shopping
    <% end %>
    <h5 class="text-right">Subtotal: <span style="color: gray"><%= number_to_currency current_order.subtotal %></span></h5>
    <h5 class="text-right">Shipping: <span style="color: gray"><%= number_to_currency current_order.shipping %></span></h5>
    <h5 class="text-right">Tax: <span style="color: gray"><%= number_to_currency current_order.tax %></span></h5>
    <h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency current_order.total %></span></h4>
    <%= link_to "#", class: "btn btn-success pull-right" do %>
      <i class="glyphicon glyphicon-credit-card"></i> Check Out Now
    <% end %>
  </div>
<% end %>
